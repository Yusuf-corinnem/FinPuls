<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- ============================================
         Переменные (аналог process.env в Node.js)
         ============================================ -->
    <!-- LOG_PATH: путь к папке логов относительно корня проекта FinPuls -->
    <!-- По умолчанию: ../logs (если запускается из backend/) или logs (если из корня) -->
    <!-- Можно переопределить через переменную окружения LOG_PATH -->
    <property name="LOG_PATH" value="${LOG_PATH:-../logs}"/>
    <property name="LOG_LEVEL" value="${LOG_LEVEL:-INFO}"/>
    <property name="SPRING_PROFILE" value="${SPRING_PROFILES_ACTIVE:-dev}"/>
    
    <!-- ============================================
         JSON Encoder с кастомной структурой
         Соответствует buildLogStructure() из Node.js
         ============================================ -->
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
        <providers>
            <!-- level - уровень логирования (INFO, DEBUG, WARN, ERROR) -->
            <level>
                <fieldName>level</fieldName>
            </level>
            
            <!-- message - сообщение лога -->
            <message>
                <fieldName>message</fieldName>
            </message>
            
            <!-- date - дата в ISO формате (как new Date().toISOString()) -->
            <timestamp>
                <fieldName>date</fieldName>
                <timeZone>UTC</timeZone>
                <pattern>yyyy-MM-dd'T'HH:mm:ss.SSS'Z'</pattern>
            </timestamp>
            
            <!-- status - HTTP статус из MDC (если есть) -->
            <mdc>
                <fieldName>status</fieldName>
                <key>http.status</key>
            </mdc>
            
            <!-- source - информация об источнике (file, function, line) -->
            <!-- Соответствует buildSourceContext() из Node.js -->
            <pattern>
                <fieldName>source</fieldName>
                <pattern>
                    {
                        "file": "%logger{36}",
                        "function": "%method",
                        "line": "%line"
                    }
                </pattern>
            </pattern>
            
            <!-- http - HTTP контекст из MDC -->
            <!-- Соответствует buildHttpContext() из Node.js -->
            <pattern>
                <fieldName>http</fieldName>
                <pattern>
                    {
                        "method": "%mdc{http.method:-}",
                        "url": "%mdc{http.url:-}",
                        "status": "%mdc{http.status:-}",
                        "durationMs": "%mdc{http.durationMs:-}",
                        "ip": "%mdc{http.ip:-}",
                        "userAgent": "%mdc{http.userAgent:-}",
                        "requestId": "%mdc{requestId:-}",
                        "createdAt": "%mdc{http.createdAt:-}"
                    }
                </pattern>
            </pattern>
            
            <!-- error - информация об ошибке -->
            <!-- Соответствует buildErrorContext() из Node.js -->
            <stackTrace>
                <fieldName>error</fieldName>
                <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                    <maxDepth>50</maxDepth>
                    <rootCauseFirst>true</rootCauseFirst>
                </throwableConverter>
            </stackTrace>
            
            <!-- data - дополнительные данные из MDC -->
            <mdc>
                <fieldName>data</fieldName>
                <includeMdcKeyName>data.*</includeMdcKeyName>
            </mdc>
            
            <!-- MDC - все остальные поля из MDC (requestId и т.д.) -->
            <mdc/>
        </providers>
    </encoder>
    
    <!-- ============================================
         Appender для combined.log (все логи)
         Аналог: new winston.transports.File({ filename: 'combined.log' })
         ============================================ -->
    <appender name="FILE_COMBINED" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/combined.log</file>
        
        <!-- Ротация файлов (аналог winston-daily-rotate-file) -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Новый файл каждый день -->
            <fileNamePattern>${LOG_PATH}/combined.%d{yyyy-MM-dd}.log</fileNamePattern>
            
            <!-- Хранить логи 14 дней -->
            <maxHistory>14</maxHistory>
            
            <!-- Удалять старые файлы автоматически -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        
        <!-- Используем JSON encoder -->
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <level><fieldName>level</fieldName></level>
                <message><fieldName>message</fieldName></message>
                <timestamp>
                    <fieldName>date</fieldName>
                    <timeZone>UTC</timeZone>
                    <pattern>yyyy-MM-dd'T'HH:mm:ss.SSS'Z'</pattern>
                </timestamp>
                <mdc><fieldName>status</fieldName><key>http.status</key></mdc>
                <pattern>
                    <fieldName>source</fieldName>
                    <pattern>{"file": "%logger{36}", "function": "%method", "line": "%line"}</pattern>
                </pattern>
                <pattern>
                    <fieldName>http</fieldName>
                    <pattern>{"method": "%mdc{http.method:-}", "url": "%mdc{http.url:-}", "status": "%mdc{http.status:-}", "durationMs": "%mdc{http.durationMs:-}", "ip": "%mdc{http.ip:-}", "userAgent": "%mdc{http.userAgent:-}", "requestId": "%mdc{requestId:-}", "createdAt": "%mdc{http.createdAt:-}"}</pattern>
                </pattern>
                <stackTrace>
                    <fieldName>error</fieldName>
                    <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                        <maxDepth>50</maxDepth>
                        <rootCauseFirst>true</rootCauseFirst>
                    </throwableConverter>
                </stackTrace>
                <mdc><fieldName>data</fieldName><includeMdcKeyName>data.*</includeMdcKeyName></mdc>
                <mdc/>
            </providers>
        </encoder>
    </appender>
    
    <!-- ============================================
         Appender для error.log (только ERROR)
         Аналог: new winston.transports.File({ 
           filename: 'error.log', 
           level: 'error' 
         })
         ============================================ -->
    <appender name="FILE_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/error.log</file>
        
        <!-- Фильтр: только ERROR уровень -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        
        <!-- Ротация файлов -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>14</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        
        <!-- Используем JSON encoder -->
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <level><fieldName>level</fieldName></level>
                <message><fieldName>message</fieldName></message>
                <timestamp>
                    <fieldName>date</fieldName>
                    <timeZone>UTC</timeZone>
                    <pattern>yyyy-MM-dd'T'HH:mm:ss.SSS'Z'</pattern>
                </timestamp>
                <mdc><fieldName>status</fieldName><key>http.status</key></mdc>
                <pattern>
                    <fieldName>source</fieldName>
                    <pattern>{"file": "%logger{36}", "function": "%method", "line": "%line"}</pattern>
                </pattern>
                <pattern>
                    <fieldName>http</fieldName>
                    <pattern>{"method": "%mdc{http.method:-}", "url": "%mdc{http.url:-}", "status": "%mdc{http.status:-}", "durationMs": "%mdc{http.durationMs:-}", "ip": "%mdc{http.ip:-}", "userAgent": "%mdc{http.userAgent:-}", "requestId": "%mdc{requestId:-}", "createdAt": "%mdc{http.createdAt:-}"}</pattern>
                </pattern>
                <stackTrace>
                    <fieldName>error</fieldName>
                    <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                        <maxDepth>50</maxDepth>
                        <rootCauseFirst>true</rootCauseFirst>
                    </throwableConverter>
                </stackTrace>
                <mdc><fieldName>data</fieldName><includeMdcKeyName>data.*</includeMdcKeyName></mdc>
                <mdc/>
            </providers>
        </encoder>
    </appender>
    
    <!-- ============================================
         Appender для консоли (для разработки)
         Красивый формат для консоли (не JSON)
         ============================================ -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- ============================================
         Уровни логирования для пакетов
         Аналог: logger.level = 'debug' в winston
         ============================================ -->
    <logger name="com.finpuls" level="${LOG_LEVEL}"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.hibernate" level="WARN"/>
    
    <!-- ============================================
         Root logger (глобальный уровень)
         Аналог: winston.createLogger({ level: 'info' })
         ============================================ -->
    <root level="${LOG_LEVEL}">
        <!-- Куда писать логи -->
        <appender-ref ref="FILE_COMBINED"/>
        <appender-ref ref="FILE_ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>

