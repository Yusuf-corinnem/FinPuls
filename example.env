# ============================================
# FinPuls Environment Variables
# ============================================
# Скопируйте этот файл в .env и заполните реальными значениями
# Команда: cp .env.example .env
# ============================================

# Spring Profile (dev, prod)
SPRING_PROFILES_ACTIVE=dev

# Logging Level (INFO, DEBUG, WARN)
LOG_LEVEL=INFO

# Приложение
# Порт приложения (пробрасывается в Spring как server.port)
SERVER_PORT=8080

# ============================================
# Database Configuration
# ============================================
# Переменные для H2 (in-memory для токенов банков)
DB_H2_URL=jdbc:h2:mem:tokens;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
DB_H2_DRIVER=org.h2.Driver
DB_H2_DBNAME=tokens
DB_H2_USERNAME=finpuls
DB_H2_PASSWORD=finpuls
DB_H2_PLATFORM=org.hibernate.dialect.H2Dialect

# Переменные для PostgreSQL (основная БД в Docker)
DB_PG_PORT=5432
DB_PG_HOST=postgres
DB_PG_DBNAME=finpuls
DB_PG_USERNAME=finpuls
DB_PG_PASSWORD=finpuls
DB_PG_DRIVER=org.postgresql.Driver

# Переменные для PostgreSQL (банковский модуль - отдельная БД в Docker)
DB_BANK_PG_HOST=postgres-bank
DB_BANK_PG_PORT=5431
DB_BANK_PG_DBNAME=bankdb
DB_BANK_PG_USERNAME=bank
DB_BANK_PG_PASSWORD=bank
DB_BANK_PG_DRIVER=org.postgresql.Driver

# ============================================
# CORS Configuration (опционально)
# ============================================
# Для production замените на реальный домен:
# CORS_ALLOWED_ORIGINS=https://yourdomain.com
# По умолчанию: http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# ============================================
# Примечание:
# ============================================
# Spring Boot автоматически читает эти переменные через ${VAR_NAME}
# В application.properties используются значения по умолчанию, если переменная не задана
